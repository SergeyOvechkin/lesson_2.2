{% include  '/twig_templates/header.twig' %}

<div data-router_main="router">	
     <div class="container-fluid" data-create_category="container" style="margin-top: 10px;">
	    <div class="row">
			<div class="col-12" >
		
		
				<form action="/create/category" method="post" name="create_category">
					
					<div class="form-group">
						<label for="title_category">Название категории</label>
						<textarea class="form-control" name="titleCategory" id="title_category" rows="1"></textarea>
					</div>

					<div class="form-group">
						<label for="id_category">id category (латиницей без пробелов)</label>
						<textarea class="form-control" name="idCategory" id="id_category" rows="1"></textarea>
					</div>
					
					<div class="form-group">
						<label for="category">Выберите вариант шаблона</label>
						<select  multiple class="form-control" name="variant_tmpl" id="variant_tmpl">
					
							<option  value="cart_variant_radio" > Доставка </option>
							<option  value="cart_variant_option" > Количество </option>
					
						</select>
					</div>
					
					<input data-create_category-submit="click" type="submit" value="Отправить" />
					
				</form>

			</div>
	    </div><!-- end row -->
     </div>
	 </div><!-- main router -->

{% include  '/twig_templates/footer.twig' %}